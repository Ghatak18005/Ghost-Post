// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// 1. User Model (Standard for NextAuth)
model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  capsules      Capsule[] // Relationship: A user has many capsules
  
  createdAt     DateTime  @default(now())
}

// 2. Account Model (Required for Google Login)
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// 3. Session Model (Required for managing login sessions)
model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// 4. Capsule Model (Your Custom Data)
model Capsule {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  
  // Core Fields
  title       String   
  content     String
  unlockDate  DateTime
  status      String   @default("PENDING")
  recipient   String
  iv          String   // Initialization Vector for encryption
  
  // Optional / Metadata
  isPaid      Boolean? @default(false)
  isDelivered Boolean? @default(false)
  createdAt   DateTime @default(now())
  
  // Relationship
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}